<Page x:Class="POCUnoOnnx.MainPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:POCUnoOnnx"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d"
	  Padding="0, 75"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid Background="Pink">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>

		<ListView ItemsSource="{x:Bind EmbeddedResources}"
				  SelectedItem="{x:Bind CurrentFile, Mode=TwoWay}" />
		
		<Grid Grid.Row="1">
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>

			<Button x:Name="selectImage"
					Content="Capture Image"
					Width="150"
					Height="50"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Top"
					Click="selectImage_Click"/>
			<Button x:Name="runClassifer"		
					Grid.Row="1"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Center"
					Content="Run Classifier"
					Click="runClassifer_Click" />
		</Grid>
		<TextBlock Grid.Row="2"
				   x:Name="content" />
	</Grid>
</Page>
