<Page
	x:Class="UnoBackgroundWorker.Presentation.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:UnoBackgroundWorker.Presentation"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:uen="using:Uno.Extensions.Navigation.UI"
	xmlns:utu="using:Uno.Toolkit.UI"
	Background="{ThemeResource BackgroundBrush}"
	NavigationCacheMode="Required"
	mc:Ignorable="d">

	<Grid utu:SafeArea.Insets="All">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<utu:NavigationBar Content="{Binding Title}" />

		<StackPanel
			Grid.Row="1"
			Padding="15"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Spacing="16">
			<TextBox PlaceholderText="Enter your name:" Text="{Binding Name, Mode=TwoWay}" />
			<Button
				AutomationProperties.AutomationId="SecondPageButton"
				Command="{Binding GoToSecond}"
				Content="Go to Second Page" />
			<ListView ItemsSource="{Binding LocationUpdates}">
				<ListView.ItemTemplate>
					<DataTemplate x:DataType="x:String">
						<StackPanel>
							<TextBlock Text="{Binding }" />
						</StackPanel>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackPanel>
	</Grid>
</Page>
