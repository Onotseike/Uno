										   utu:AutoLayout.CounterAlignment="Center" />
							</utu:AutoLayout>
							<muxc:RatingControl Caption="Label"
												MaxRating="5"
												utu:AutoLayout.CounterAlignment="Center"
												/>
						</utu:AutoLayout>
						<utu:Divider Style="{StaticResource DividerStyle}" />
						<utu:AutoLayout Spacing="30"
										Orientation="Horizontal">
